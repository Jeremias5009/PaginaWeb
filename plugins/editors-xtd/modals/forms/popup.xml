<?xml version="1.0" encoding="utf-8"?>
<config addfieldprefix="RegularLabs\Library\Form\Field">
  <fieldset name="text" addfieldprefix="RegularLabs\Library\Form\Field">
    <field name="text" type="Text" class="input-xxlarge input-large-text" label="RL_TEXT" hint="MDL_LINK_TEXT_HINT"/>
  </fieldset>
  <fieldset name="main" addfieldprefix="RegularLabs\Library\Form\Field">
    <field name="type" type="Radio" class="btn-group rl-btn-group btn-group-md" default="url" label="RL_TYPE">
      <option value="url" class="btn btn-outline-info">%s %s,&lt;span class="icon-link"&gt;&lt;/span&gt;,RL_URL</option>
      <option value="content">%s %s,&lt;span class="icon-paragraph-justify"&gt;&lt;/span&gt;,RL_CONTENT</option>
      <option value="article">%s %s,&lt;span class="icon-file"&gt;&lt;/span&gt;,RL_ARTICLE</option>
      <option value="image">%s %s,&lt;span class="icon-image"&gt;&lt;/span&gt;,RL_IMAGE</option>
      <option value="gallery">%s %s,&lt;span class="icon-images"&gt;&lt;/span&gt;,RL_GALLERY</option>
      <option value="video">%s %s,&lt;span class="icon-video"&gt;&lt;/span&gt;,RL_VIDEO</option>
    </field>
    <field name="@showon__type_url__a" type="ShowOn" value="type:url"/>
    <field name="url" type="Text" hint="MDL_URL_HINT" label="RL_URL" description="MDL_URL_DESC"/>
    <field name="@showon__type_url__b" type="ShowOn"/>
    <field name="@showon__type_content__a" type="ShowOn" value="type:content"/>
    <field name="@content_free_1" type="OnlyPro"/>
    <field name="@content_free_2" type="Note" text="MDL_CONTENT_FREE_DESC" class="alert alert-info"/>
    <field name="@showon__type_content__b" type="ShowOn"/>
    <field name="@showon__type_article__a" type="ShowOn" value="type:article"/>
    <field name="@article_free_1" type="OnlyPro"/>
    <field name="@article_free_2" type="Note" text="MDL_ARTICLE_FREE_DESC" class="alert alert-info"/>
    <field name="@showon__type_article__b" type="ShowOn"/>
    <field name="@showon__type_image__a" type="ShowOn" value="type:image"/>
    <field name="@image_free_1" type="OnlyPro"/>
    <field name="@image_free_2" type="Note" text="MDL_IMAGE_FREE_DESC" class="alert alert-info"/>
    <field name="@showon__type_image__b" type="ShowOn"/>
    <field name="@showon__type_gallery__a" type="ShowOn" value="type:gallery"/>
    <field name="@gallery_free_1" type="OnlyPro"/>
    <field name="@gallery_free_2" type="Note" text="MDL_VIDEO_FREE_DESC" class="alert alert-info"/>
    <field name="@showon__type_gallery__b" type="ShowOn"/>
    <field name="@showon__type_video__a" type="ShowOn" value="type:video"/>
    <field name="@video_free_1" type="OnlyPro"/>
    <field name="@video_free_2" type="Note" text="MDL_VIDEO_FREE_DESC" class="alert alert-info"/>
    <field name="@showon__type_video__b" type="ShowOn"/>
  </fieldset>
  <fieldset name="styling">
    <field name="theme" type="List" default="" class="w-auto" label="RL_THEME">
      <option value="">JDEFAULT</option>
      <option value="dark">MDL_THEME_DARK</option>
      <option value="light">MDL_THEME_LIGHT</option>
      <option value="custom">RL_CUSTOM</option>
      <option disabled="disabled" value="-">---</option>
      <option disabled="disabled" value="-">RL_ONLY_AVAILABLE_IN_PRO_LIST_OPTION</option>
      <option disabled="disabled" value="-">MDL_THEME_AUTOMATIC_DARK</option>
      <option disabled="disabled" value="-">MDL_THEME_AUTOMATIC_LIGHT</option>
      <option disabled="disabled" value="-">MDL_THEME_CLASSIC</option>
    </field>
    <field name="class" type="Text" label="MDL_CSS_CLASS_LINK" description="MDL_CSS_CLASS_LINK_DESC"/>
    <field name="classname" type="Text" label="MDL_CSS_CLASS_MODAL" description="MDL_CSS_CLASS_MODAL_DESC"/>
    <field name="width" type="Number" class="font-monospace text-right rl-w-8em" size="10" default="" label="RL_WIDTH" description="%s&lt;br&gt;&lt;br&gt;%s,MDL_DIMENSION_DESC,RL_EMPTY_FOR_DEFAULT"/>
    <field name="height" type="Number" class="font-monospace text-right rl-w-8em" size="10" default="" label="RL_HEIGHT" description="%s&lt;br&gt;&lt;br&gt;%s,MDL_DIMENSION_DESC,RL_EMPTY_FOR_DEFAULT"/>
  </fieldset>
  <fieldset name="settings">
    <field name="title" type="Text" label="JGLOBAL_TITLE" description="MDL_TITLE_DESC"/>
    <field name="description" type="Textarea" label="JGLOBAL_DESCRIPTION" description="MDL_DESCRIPTION_DESC"/>
    <field name="@open_free" type="OnlyPro" label="MDL_OPEN_ON_PAGELOAD" description="MDL_OPEN_ON_PAGELOAD_DESC"/>
    <field name="@autoclose_free" type="OnlyPro" label="MDL_AUTOCLOSE" description="MDL_AUTOCLOSE_DESC"/>
  </fieldset>
</config>
