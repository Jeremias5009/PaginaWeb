  <namespace path="src">RegularLabs\Plugin\System\Modals</namespace>
  <scriptfile>script.install.php</scriptfile>
  <files>
    <file plugin="modals">modals.php</file>
    <folder>language</folder>
    <folder>src</folder>
  </files>
